{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["bun-types"],
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "analytics-script/analytics.js"],
  "types": [
    "node",
    "bun",
    "./node_modules/@simplewebauthn/server/esm/index.d.ts",
    "./node_modules/jose/dist/types/index.d.ts"
  ]
}
